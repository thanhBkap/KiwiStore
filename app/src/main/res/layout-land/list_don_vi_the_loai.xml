<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_the_loai"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="2dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/anh_the_loai"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:scaleX="1"
            android:scaleY="1"
            android:src="@drawable/ic_trochoi"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/txtTenVaSoLuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:layout_toRightOf="@+id/anh_the_loai"
            android:text="Tất cả(150)"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/categoryList" />

    </RelativeLayout>

</android.support.v7.widget.CardView><!--
</LinearLayout>
-->

