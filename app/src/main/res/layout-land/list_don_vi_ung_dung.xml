<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_ung_dung"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/none"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:background="@drawable/bo_vien_trang"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp">

        <ImageView
            android:id="@+id/anh_ung_dung"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/bg" />

        <TextView
            android:id="@+id/txt_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/anh_ung_dung"
            android:text="VTV go for Android TV"
            android:textColor="@color/light_green"
            android:textSize="12dp" />

        <RatingBar
            android:id="@+id/rating_app"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/txt_ten"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/anh_ung_dung"
            android:numStars="5"
            android:rating="3"
            android:text="VTV go for Android TV"
            android:textColor="@color/light_green"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_installed_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_app"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/anh_ung_dung"
            android:text="Đã có 45 lượt cài"
            android:textColor="@color/light_green"
            android:textSize="11dp" />

        <RelativeLayout
            android:id="@+id/layout_cai_dat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@+id/anh_ung_dung"
            android:background="@drawable/bo_vien_cai_dat"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">


            <ImageView
                android:id="@+id/anh_checked"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:src="@drawable/check" />

            <TextView
                android:id="@+id/txt_cai_dat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/anh_checked"
                android:minWidth="120dp"
                android:text="Đã cài đặt"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="11dp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

