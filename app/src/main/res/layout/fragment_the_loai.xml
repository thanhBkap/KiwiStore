<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_ung_dung_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.store.kiwi.kiwistore.TheLoaiFragment">

    <RelativeLayout
        android:id="@+id/layout_the_loai"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/title_bar"
        android:paddingBottom="@dimen/_1sdp"
        android:paddingLeft="@dimen/_1sdp"
        android:paddingRight="@dimen/_1sdp"
        android:paddingTop="@dimen/_1sdp">

        <TextView
            android:id="@+id/txt_ten_so_luong_the_loai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/nothing"
            android:layout_toRightOf="@+id/anh_the_loai"
            android:text="Tất cả(150)"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:id="@+id/nothing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_ung_dung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_the_loai">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
