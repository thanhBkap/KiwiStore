<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_the_loai"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/anh_ung_dung"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_kiwi" />

        <TextView
            android:id="@+id/txt_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/anh_ung_dung"
            android:text="VTV go for Android TV"
            android:textColor="@color/light_green" />

        <RelativeLayout
            android:id="@+id/layout_cai_dat"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/anh_ung_dung"
            android:background="@color/light_green">

            <ImageView
                android:layout_margin="4dp"
                android:layout_centerVertical="true"
                android:id="@+id/anh_checked"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/check" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/txt_cai_dat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/anh_checked"
                android:text="Đã cài đặt"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
